{
	"compileOnSave": false,
	"compilerOptions": {
		"paths": {
			"~types": ["./src/types"],
			"~config": ["./src/config"],
			"~decorators": ["./src/decorators"],
			"~file_data_creators": ["./src/file_data_creators"],
			"~bd": ["./src/bd"],
			"~modules": ["./src/modules"],
			"~utils": ["./src/utils"],
			"~fs": ["./src/fs"]
		},
		"moduleResolution": "node",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"declaration": true,
		"isolatedModules": true,
		"downlevelIteration": true,
		"outDir": "dist"
	},
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}
